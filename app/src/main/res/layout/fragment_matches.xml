<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Matches"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/background"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="search..."
        android:id="@+id/matches_searchbar"
        android:textColorHint="#b3b3b3"
        android:textColor="@color/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:id="@+id/matches_matchNumberHead"
            android:background="@drawable/match_border"
            android:textSize="17sp"
            android:gravity="center"
            android:text="Match #"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/redteam_style"
            android:textSize="17sp"
            android:text="Red Teams"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/blueteam_style"
            android:textSize="17sp"
            android:text="Blue Teams"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/matches_list"
        android:scrollbars="vertical"/>

</LinearLayout>