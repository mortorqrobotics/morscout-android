<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teamlist_refreshLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="All Teams"
            android:textColor="@color/background"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/teamlist_searchbar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="search..."
            android:textColor="@color/background"
            android:textColorHint="#b3b3b3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teamlist_teamNumberHead"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/team_number_border"
                android:gravity="center"
                android:text="Team #"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/teamlist_teamNameHead"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/team_name_border"
                android:gravity="center"
                android:text="Name"
                android:textSize="17sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/teamList_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/teamlist_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>