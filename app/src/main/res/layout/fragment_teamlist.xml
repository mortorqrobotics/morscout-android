<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Teams"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/background"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="search..."
        android:id="@+id/teamlist_searchbar"
        android:textColorHint="#b3b3b3"
        android:textColor="@color/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/teamlist_teamNumberHead"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/team_number_border"
            android:textSize="17sp"
            android:gravity="center"
            android:text="Team #"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/teamlist_teamNameHead"
            android:background="@drawable/team_name_border"
            android:textSize="17sp"
            android:gravity="center"
            android:text="Name"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/teamList_loading"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/teamlist_list"
        android:scrollbars="vertical"
        android:visibility="gone"/>

</LinearLayout>