<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <include layout="@layout/actionbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:id="@+id/match_title"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_redTeam1"
                android:background="@drawable/redteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_redTeam2"
                android:background="@drawable/redteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_redTeam3"
                android:background="@drawable/redteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_blueTeam1"
                android:background="@drawable/blueteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_blueTeam2"
                android:background="@drawable/blueteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/match_blueTeam3"
                android:background="@drawable/blueteam_style"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/match_tabLayout"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/match_pager"
        android:visibility="gone"/>
</LinearLayout>